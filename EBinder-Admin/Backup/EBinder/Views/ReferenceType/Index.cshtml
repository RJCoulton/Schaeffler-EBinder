@model IEnumerable<EBinder.Models.ReferenceType>

@{
    ViewBag.Title = "Reference Type";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TypeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReferenceCategory.CategoryName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TypeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReferenceCategory.CategoryName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ReferenceTypeID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ReferenceTypeID })
        </td>
    </tr>
}

</table>
