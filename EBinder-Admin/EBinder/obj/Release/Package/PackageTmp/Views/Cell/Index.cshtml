@model IEnumerable<EBinder.Models.Cell>
@using EBinder.App_GlobalResources

@{
    ViewBag.Title = Resource.Cells;
}

<h2>@ViewBag.Title</h2>
<p>
    @Html.ActionLink(Resource.ReturnToDashboard, "Index", "Home")
</p>
<p>
    @Html.ActionLink(Resource.CreateNew, "Create")
</p>
<table>
    <tr>
        <th class="table-header">
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th class="table-header">
            @Html.DisplayNameFor(model => model.Workcenter)
        </th>
        <th class="table-header">
            @Html.DisplayNameFor(model => model.Department.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="table-cell">
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td class="table-cell">
            @Html.DisplayFor(modelItem => item.Workcenter)
        </td>
        <td class="table-cell">
            @Html.DisplayFor(modelItem => item.Department.Name)
        </td>
        <td class="table-cell">
            @Html.ActionLink(Resource.Links, "Links", new { id = item.CellID }) |
            @Html.ActionLink(Resource.Edit, "Edit", new { id=item.CellID }) |
            @Html.ActionLink(Resource.Delete, "Delete", new { id=item.CellID }, new { onclick = "return confirm('" +Resource.DeleteConfirmation + "');" })
        </td>
    </tr>
}

</table>
