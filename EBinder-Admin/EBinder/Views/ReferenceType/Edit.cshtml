@model EBinder.Models.ReferenceType
@using EBinder.App_GlobalResources
@{
    ViewBag.Title = Resource.Edit;
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>@Resource.ReferenceType</legend>

        @Html.HiddenFor(model => model.ReferenceTypeID)

        <div class="editor-label">
            @Html.LabelFor(model => model.TypeName_en)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TypeName_en)
            @Html.ValidationMessageFor(model => model.TypeName_en)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TypeName_es)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TypeName_es)
            @Html.ValidationMessageFor(model => model.TypeName_es)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ReferenceCategoryID, "Reference Category")
        </div>
        <div class="editor-field">
            @Html.DropDownList("ReferenceCategoryID", String.Empty)
            @Html.ValidationMessageFor(model => model.ReferenceCategoryID)
        </div>

        <p>
            <input type="submit" value="@Resource.Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink(Resource.BackToList, "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
