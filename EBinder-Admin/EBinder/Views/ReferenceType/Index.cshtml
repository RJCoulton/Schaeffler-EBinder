@model IEnumerable<EBinder.Models.ReferenceType>
@using EBinder.App_GlobalResources
@{
    ViewBag.Title = Resource.ReferenceType;
}

<h2>@ViewBag.Title</h2>
<p>
    @Html.ActionLink(Resource.ReturnToDashboard, "Index", "Home")
</p>
<p>
    @Html.ActionLink(Resource.CreateNew, "Create")
</p>
<table>
    <tr>
        <th class="table-header">
            @Html.DisplayNameFor(model => model.TypeName_en)
        </th>
        <th  class="table-header">
            
            @Html.DisplayNameFor(model => model.ReferenceCategory.CategoryName_en)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="table-cell">
            @if (Session["Language"].ToString() == "es" && item.TypeName_es != null)
            {
                @Html.DisplayFor(modelItem => item.TypeName_es)
            }
            else
            {
                @Html.DisplayFor(modelItem => item.TypeName_en)
            }
        </td>
        <td class="table-cell">
            @if (Session["Language"].ToString() == "es" && item.ReferenceCategory.CategoryName_es != null)
            {
                @Html.DisplayFor(modelItem => item.ReferenceCategory.CategoryName_es)
            }
            else
            {
                @Html.DisplayFor(modelItem => item.ReferenceCategory.CategoryName_en)
            }
        </td>
        <td class="table-cell">
            @Html.ActionLink(Resource.Edit, "Edit", new { id=item.ReferenceTypeID }) |
            @Html.ActionLink(Resource.Delete, "Delete", new { id = item.ReferenceTypeID }, new { onclick = "return confirm('"+ Resource.DeleteConfirmation+"');" })
        </td>
    </tr>
}

</table>
